@using Model.EF;
@model Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<link href="/assets/clients/css/style.css" rel="stylesheet" type="text/css" media="all" />
<link href="/assets/clients/css/menu.css" rel="stylesheet" type="text/css" media="all" />
<link href='//fonts.googleapis.com/css?family=Doppio+One' rel='stylesheet' type='text/css'>
<link href='//fonts.googleapis.com/css?family=Monda' rel='stylesheet' type='text/css'>
<div class="main" style="width:auto">
    <div class="content">
        <div class="content_top">
            <div class="back-links">
                <p><a href=@Url.Action("Index","Product")>Home</a> >> <a href="#">@Model.Name</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            <div class="cont-desc span_1_of_2">
                <div class="grid images_3_of_2">
                    <img src=@Model.Image alt="" />
                </div>
                <div class="desc span_3_of_2">
                    <h2>Lorem Ipsum is simply dummy text </h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore.</p>
                    <div class="price">
                        <p>Price: <span>@Model.Price.Value.ToString("#,##") VNĐ</span></p>
                    </div>
                    <div class="available">
                        <p>Available Options :</p>
                        <ul>
                            <li>
                                Color:
                                <select>
                                    <option>Silver</option>
                                    <option>Black</option>
                                    <option>Dark Black</option>
                                    <option>Red</option>
                                </select>
                            </li>
                            <li>
                                Size:<select>
                                    <option>Large</option>
                                    <option>Medium</option>
                                    <option>small</option>
                                    <option>Large</option>
                                    <option>small</option>
                                </select>
                            </li>
                            <li>
                                Quality:<select>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </li>
                        </ul>
                    </div>
                    <div class="share">
                        <p>Share Product :</p>
                        <ul>
                            <li><a href="#"><img src="/assets/clients/images/youtube.png" alt=""></a></li>
                            <li><a href="#"><img src="/assets/clients/images/facebook.png" alt=""></a></li>
                            <li><a href="#"><img src="/assets/clients/images/twitter.png" alt=""></a></li>
                            <li><a href="#"><img src="/assets/clients/images/linkedin.png" alt=""></a></li>
                        </ul>
                    </div>
                </div>
                <div class="product-desc">
                    <h2>Product Details</h2>
                    <p>@Model.Detail</p>
                    <p>@Model.Description</p>
                </div>
                <div class="product-tags">
                    <h2>Product Tags</h2>
                    <h4>Add Your Tags:</h4>
                    <div class="input-box">
                        <input type="text" value="" />
                    </div>
                    <div class="button"><span><a href="#">Add Tags</a></span></div>
                </div>
            </div>
        </div>
    </div>
</div>

